{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "pretty": true,
    "target": "es6",
    "rootDir": "./",
    "outDir": "build",

    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "express", "morgan", "body-parser", "helmet"
    ],
    "lib": [
      "dom", "esnext"
    ],
  },
  "include": [
    "**/*.ts", "handler.js"
  ],
  "exclude": [
    "node_modules", "build", "webpack"
  ],

}